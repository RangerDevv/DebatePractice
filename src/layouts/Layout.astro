---
import Logout from '../components/logout.svelte';
import Login from '../components/login.svelte';
import { supabase } from '../lib/backend.js';

export interface Props {
	title: string,
	loggedIn?: boolean
}
const { title, loggedIn = false } = Astro.props;
const refreshToken = Astro.cookies.get("my-refresh-token").value
const accessToken = Astro.cookies.get("my-access-token").value
if (refreshToken && accessToken) {
	await supabase.auth.setSession({
		refresh_token: refreshToken,
		access_token: accessToken,
	})
}
	
	
const currentUser = (await supabase.auth.getUser(accessToken)).data.user
var authed = currentUser !== null
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav class="bg-black w-screen gap-6 mt-6 flex flex-row justify-between">
			{!authed && <a href="/" class="text-white text-xl font-semibold">Home</a>}
			{authed && <a href="/dashboard" class="text-white text-xl pt-2 font-semibold">Home</a>}
			<div class="flex flex-row gap-3 mr-6">
				{!authed && <Login client:only="svelte"/>}
				{authed && <a href="/newassignment" class="bg-white text-black px-4 py-2 h-10 text-sm sm:text-md rounded-lg">Create <span class="font-extrabold">+</span></a>}
				{authed && <Logout client:only="svelte"/>}
			</div>
		</nav>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: rgb(0,0,0);
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	/* hide the side scroll */
	body {
		overflow-x: hidden;
	}
</style>
